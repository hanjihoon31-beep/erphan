# 🔗 MongoDB 연결
# MongoDB Atlas 또는 로컬 MongoDB 연결 URI
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority
USE_MONGO=true

# 🌐 서버 포트
PORT=3001

# 🔐 JWT 인증 키
# 강력한 랜덤 문자열 사용 권장 (최소 32자 이상)
# 생성 방법: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# 🌍 클라이언트 URL (CORS 설정용)
CLIENT_URL=http://localhost:5173

# 📧 이메일 승인 (Gmail SMTP)
# Gmail 앱 비밀번호 생성: https://myaccount.google.com/apppasswords
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# 🔧 Node 환경 (development, production, test)
NODE_ENV=development
